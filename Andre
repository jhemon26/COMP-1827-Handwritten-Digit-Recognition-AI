import os
import cv2
import numpy as np
import matplotlib.pyplot as plt
import tensorflow as tf
#from tensorflow.keras.metrics import accuracy  
"""
#A typo in Accuracy as it should be capital A 
and also its unnecessary to import Accuracy here as we are using metrics=['accuracy'] 
in model.compile in line 28

"""
from tensorflow.keras.datasets import mnist    # ->> correct ref
#from tensorflow.keras.(dataset) <-- here import mnist ->> ref is wrong with a typo

#mnist = tf.keras.datasets.mnist
(x_train, y_train), (x_test, y_test) = mnist.load_data()

x_train = tf.keras.utils.normalize(x_train, axis=1)
x_test = tf.keras.utils.normalize(x_test, axis=1)

model = tf.keras.models.Sequential()
model.add(tf.keras.layers.Flatten(input_shape=(28,28)))
model.add(tf.keras.layers.Dense(128, activation='relu'))
model.add(tf.keras.layers.Dense(128, activation='relu'))
model.add(tf.keras.layers.Dense(10, activation='softmax'))

model.compile(optimizer= 'adam', loss='sparse_categorical_crossentropy', metrics=['accuracy'])

model.fit(x_train, y_train, epochs=3)

model.save('handwritten.keras')
# --> this line raise this error
"""                                            read just below line 
ValueError: Invalid filepath extension for saving. Please add either a `.keras` extension for the native Keras
format (recommended) or a `.h5` extension. Use `model.export(filepath)` if you want to export a SavedModel 
for use with TFLite/TFServing/etc. Received: filepath=handwritten.model.
--> Invalid filepath extension for saving <--  see the exact error 
"""

#if code works save and call the model so you dont train it over and over ie if i get this code above to finally work remember to comment them all out

model = tf.keras.models.load_model('handwritten.keras')

loss, accuracy = model.evaluate(x_test, y_test)# to test how accurate
print(f"\nJust to have a clear Dataflow print")
print(f"Test loss: {loss}")
print(f"Test accuracy: {accuracy}")


